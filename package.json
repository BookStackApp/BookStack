{
  "private": true,
  "scripts": {
    "build:css:dev": "sass ./resources/sass:./public/dist --embed-sources && npx tailwindcss -i ./resources/tailwind-css/main.css -o ./dist/tailwind-compiled.css --watch",
    "build:css:watch": "sass ./resources/sass:./public/dist --watch --embed-sources",
    "build:css:production": "sass ./resources/sass:./public/dist -s compressed",
    "build:js:dev": "node dev/build/esbuild.js",
    "build:js:watch": "chokidar --initial \"./resources/**/*.js\" -c \"npm run build:js:dev\"",
    "build:js:production": "node dev/build/esbuild.js production",
    "build:flowbite:watch": "cp -Rp node_modules/flowbite/dist/* public/dist",
    "build:tailwind:dev": "npx tailwindcss -i ./resources/tailwind-css/main.css -o ./public/dist/tailwind-compiled.css --watch",
    "build:tailwind:watch": "npx tailwindcss -i ./resources/tailwind-css/main.css -o ./public/dist/tailwind-compiled.css --watch",
    "build:tailwind:production": "npx tailwindcss -i ./resources/tailwind-css/main.css -o ./public/dist/tailwind-compiled.css --minify",
    "build": "npm-run-all --parallel build:*:dev",
    "production": "npm-run-all --parallel build:*:production",
    "dev": "npm-run-all --parallel watch livereload",
    "watch": "npm-run-all --parallel build:*:watch",
    "livereload": "livereload ./public/dist/",
    "permissions": "chown -R $USER:$USER bootstrap/cache storage public/uploads"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.13",
    "chokidar-cli": "^3.0",
    "esbuild": "^0.15.12",
    "flowbite": "^1.6.2",
    "flowbite-typography": "^1.0.3",
    "livereload": "^0.9.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-import": "^15.1.0",
    "punycode": "^2.1.1",
    "sass": "^1.55.0",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "clipboard": "^2.0.11",
    "codemirror": "^5.65.5",
    "dropzone": "^5.9.3",
    "jquery": "^3.6.3",
    "markdown-it": "^13.0.1",
    "markdown-it-task-lists": "^2.1.1",
    "snabbdom": "^3.5.1",
    "sortablejs": "^1.15.0"
  }
}
